{{ ansible_managed | comment }}

[Unit]
Description=Prometheus logstash Exporter
After=network-online.target
StartLimitInterval=0

[Service]
Type=simple
Restart=always
ExecStart={{ logstash_exporter_install_dir }}/logstash-exporter \
		-logstash.host {{ logstash_exporter_server_address }} \
		-logstash.port {{ logstash_exporter_server_port }} \
		-logstash.timeout {{ logstash_exporter_timeout }} \
		-web.listen-address {{ logstash_exporter_listen_port }} \
		-web.telemetry-path {{ logstash_exporter_path }}
ExecReload=/bin/kill -HUP $MAINPID
SyslogIdentifier=logstash-exporter
RestartSec=1
PrivateTmp=yes

[Install]
WantedBy=multi-user.target
